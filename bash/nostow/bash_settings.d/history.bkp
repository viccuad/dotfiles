# More history settings:

# don't put duplicate lines in the history and ignone commands starting with a
# space to be stored in history. See bash(1) for more options # ignone commands
export HISTCONTROL=ignoredups:ignorespace


# append to the history file, don't overwrite it
shopt -s histappend

# for setting history length see HISTSIZE and HISTFILESIZE in bash(1)
HISTSIZE=1000
HISTFILESIZE=2000
